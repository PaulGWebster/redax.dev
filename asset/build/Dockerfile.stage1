FROM perlbase:stage0 AS stage1

USER root

RUN echo "perlsys" > /etc/hostname

COPY src /asset

WORKDIR /asset

RUN apt remove              \ 
    perl                    \
    python3                 \
    debian-archive-keyring  \
    apt                     \
    x11-common              \
    media-types             \
    mariadb-common          \
    autotools-dev           \
    -y                      \
    --allow-remove-essential
